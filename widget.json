{
  "name": "Zoutt Subathon Widget",
  "author": "Zoutt Freelancer",
  "description": "Subathon widget. Añade tiempo por subs, donaciones y cheers. Configurable.",
  "version": "1.0.0",
  "options": {
    "noPreview": false
  },
  "files": [
    "widget.html",
    "widget.css",
    "widget.js"
  ],
  "fields": [
    {
      "name": "popupDuration",
      "type": "number",
      "label": "Duración popup (s)",
      "default": 3
    },
    {
      "name": "tier1Minutes",
      "type": "number",
      "label": "Tier1 minutos",
      "default": 5
    },
    {
      "name": "tier2Minutes",
      "type": "number",
      "label": "Tier2 minutos",
      "default": 10
    },
    {
      "name": "tier3Minutes",
      "type": "number",
      "label": "Tier3 minutos",
      "default": 30
    },
    {
      "name": "donationPerDollar",
      "type": "number",
      "label": "Segundos por $1",
      "default": 60
    },
    {
      "name": "bitsPerUnit",
      "type": "number",
      "label": "Bits por unidad para 1 min",
      "default": 100
    },
    {
      "name": "hoursGoal",
      "type": "number",
      "label": "Meta horas (tiempo)",
      "default": 24
    },
    {
      "name": "subsGoal",
      "type": "number",
      "label": "Meta subs",
      "default": 100
    },
    {
      "name": "donationsGoal",
      "type": "number",
      "label": "Meta donaciones $",
      "default": 50
    },
    {
      "name": "cheersGoal",
      "type": "number",
      "label": "Meta cheers",
      "default": 1000
    },
    {
      "name": "locale",
      "type": "text",
      "label": "Locale",
      "default": "es-ES"
    }
  ]
}